<%= simple_form_for(@pomodoro) do |f| %>
  <%= f.hidden_field :duration, value: 1500 %>
  <%= f.hidden_field :period, value: "productive" %>
  <%- if current_user.timer_running? -%>
    <%= f.submit "Start Pomodoro", class: "btn btn-large btn-info pom-start", disabled: "disabled" %>
  <%- else -%>
    <%= f.submit "Start Pomodoro", class: "btn btn-large btn-info pom-start" %>
  <%- end -%>
<% end %>
