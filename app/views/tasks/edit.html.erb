<%= javascript_tag do %>
  window.task = <%= raw @task.to_json %>
<% end %>
<div class="nav_active" id="edit-task">
  <%= simple_form_for( @task, :html => {class: 'form-horizontal' } ) do |f| %>
  <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :description, input_html: { cols: 60, rows: 3 } %>
  <div id="task_start" class="picker input-append well">
        <%= f.label :start %>
        <%= f.input_field :start, as: :string, :'data-format' => "dd/MM/yyyy HH:mm:ss PP" %>
        <span class="add-on">
          <i data-date-icon="icon-calendar" data-time-icon="icon-time" >
          </i>
        </span>
      </div>
     
      <div id="task_end" class="picker input-append well">
        <%= f.label :end %>
        <%= f.input_field :end, as: :string, :'data-format' => "dd/MM/yyyy HH:mm:ss PP" %>
        <span class="add-on">
          <i data-date-icon="icon-calendar" data-time-icon="icon-time" >
          </i>
        </span>
      </div>  

    <%= f.button :submit %>
  <% end %>
</div>
