<div class="nav_active" id="all_tasks">
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to( task.name, task ) %> <%= task.start.to_formatted_s(:short) %> - 
      <% if task.end %>
        <%= task.end.to_formatted_s(:short) %>
      <% else %>
        <%= link_to( "Add End Time", edit_task_path( task ) ) %> |
      <% end %>
      <%= link_to( "Edit", edit_task_path( task ) ) %></li>
    <% end %>
  </ul>
</div>
