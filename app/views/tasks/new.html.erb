<div class="nav_active" id="add_task">
  <%= simple_form_for(@task, :html => {:class => 'form-horizontal' }) do |form| %>
    <%= form.input :name %>
    <%= form.input :description, input_html: { cols: 60, rows: 2 } %>

    <% @now = DateTime.now.strftime('%m/%d/%Y %I:%M:%S %p') %>
    <div id="task_start" class="picker input-append well">
      <%= form.label :start %>
      <%= form.input_field :start, as: :string, placeholder: @now, :'data-format' => "MM/dd/yyyy HH:mm:ss PP" %>
      <span class="add-on">
        <i data-date-icon="icon-calendar" data-time-icon="icon-time" >
        </i>
      </span>
    </div>
   
    <div id="task_end" class="picker input-append well">
      <%= form.label :end %>
      <%= form.input_field :end, as: :string, placeholder: @now, :'data-format' => "MM/dd/yyyy HH:mm:ss PP" %>
      <span class="add-on">
        <i data-date-icon="icon-calendar" data-time-icon="icon-time" >
        </i>
      </span>
    </div>

    <%= form.button :submit %>
  <% end %>
  <p>* Indicates required field</p>
</div>
