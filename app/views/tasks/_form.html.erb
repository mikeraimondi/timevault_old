<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { cols: 60, rows: 3 } %>

  <%= f.input :start,
    as: :string,
    wrapper_html: {id: 'task_start'},
    input_html: { :'data-format' => "dd/MM/yyyy HH:mm:ss PP", placeholder: get_current_time },
    :wrapper => :datepicker %>

  <%= f.input :end,
    as: :string,
    wrapper_html: {id: 'task_end'},
    input_html: { :'data-format' => "dd/MM/yyyy HH:mm:ss PP", placeholder: get_current_time },
    :wrapper => :datepicker %>

  <%= f.simple_fields_for :commits do |commit_form| %>
    <%= commit_form.input :sha1 %>
    <%= commit_form.input :repository_id, collection: @task.user.repositories %>
  <%- end -%>

  <%= f.button :submit %>
  <small>* Indicates required field</small>
<% end %>
